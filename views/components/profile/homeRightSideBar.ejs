<section>
  <aside
    id="rightBar"
    class="hidden w-72  bg-white-400 border-l rounded-l-xl border-black sticky top-[65px] transition-all transform translate-x-full ease-in-out duration-500 rightBarInProfile"
  >
    <div class="w-full flex mx-auto overflow-x-hidden">
      <div class="w-full h-full flex flex-col text-gray-900 text-xl">
        <div
          class="fixed top-[0.25px] z-10 bg-white border-b rounded-t-xl border-gray-600 p-2 pr-4 h-max w-full flex justify-between items-center"
        >
          <span id="sidebarTitle"></span>
          <img
            id="close"
            class="h-4 w-4 float-right cursor-pointer"
            src="/assets/images/close.png"
            alt="close"
          />
        </div>
        <div
          class="flex flex-col h-max items-between relative top-[40px] justify-between"
        >
          <ul
            id="userList"
            class="divide-y divide-gray-200 dark:divide-gray-700"
          ></ul>
          <div
            id="textBox"
            class="w-[260px] m-2 pl-3 pr-1 py-1 rounded-3xl border border-black items-center inline-flex justify-between hidden fixed bottom-0 bg-white"
          >
            <form id="form" class="flex w-full m-0">
              <div class="flex items-center gap-2">
                <input
                  id="comments"
                  class="grow w-[175px] shrink basis-0 text-black text-xs font-medium leading-4 focus:outline-none"
                  placeholder="Type here..."
                  autofocus
                />
              </div>
              <div class="flex items-center gap-2">
                <button
                  id="sendbtn"
                  class="items-center flex px-3 py-2 bg-indigo-600 rounded-full shadow"
                >
                  <p class="text-white text-xs font-semibold leading-4 px-2">
                    Send
                  </p>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </aside>
</section>
